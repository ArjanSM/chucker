<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.chuckerteam.chucker.internal.ui.filter.FiltersFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/chucker_filter_fragment_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/chucker_filter_fragment_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/chucker_filter_fragment_toolbar"
            app:title="@string/chucker_filters">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/chucker_filters"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/filter_category_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/chucker_doub_grid"
            android:layout_marginStart="@dimen/chucker_doub_grid"
            android:layout_marginEnd="@dimen/chucker_doub_grid"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/chucker_filter_category_fragment"
                android:name="com.chuckerteam.chucker.internal.ui.filter.FilterCategoryFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/chucker_filter_category_content_fragment"
                android:name="com.chuckerteam.chucker.internal.ui.filter.FilterCategoryContentFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filter_cancel"
            android:text="@string/chucker_cancel"
            app:layout_constraintTop_toBottomOf="@id/filter_category_layout"
            app:layout_constraintStart_toStartOf="@id/filter_category_layout"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/filters_accept"
            android:text="@string/chucker_apply"
            app:layout_constraintEnd_toEndOf="@id/filter_category_layout"
            app:layout_constraintTop_toTopOf="@id/filter_cancel"
            app:layout_constraintBottom_toBottomOf="@id/filter_cancel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
