<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chucker_filter_category_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chucker_doub_grid"
        android:text="@string/chucker_method"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chucker_filter_category_method_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chucker_method_get"
        android:layout_marginStart="@dimen/chucker_doub_grid"
        android:layout_marginTop="@dimen/chucker_doub_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chucker_filter_category_method" />

    <CheckBox
        android:id="@+id/chucker_filter_category_method_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chucker_method_post"
        android:layout_marginTop="@dimen/chucker_doub_grid"
        app:layout_constraintStart_toStartOf="@id/chucker_filter_category_method_get"
        app:layout_constraintTop_toBottomOf="@id/chucker_filter_category_method_get" />

    <CheckBox
        android:id="@+id/chucker_filter_category_method_put"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chucker_doub_grid"
        android:layout_marginBottom="8dp"
        android:text="@string/chucker_method_put"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/chucker_filter_category_method_post"
        app:layout_constraintTop_toBottomOf="@+id/chucker_filter_category_method_post" />
</androidx.constraintlayout.widget.ConstraintLayout>
