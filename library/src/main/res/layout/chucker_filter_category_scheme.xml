<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chucker_filter_category_scheme_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chucker_doub_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/chucker_scheme" />

    <CheckBox
        android:id="@+id/chucker_filter_category_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/chucker_doub_grid"
        android:layout_marginTop="@dimen/chucker_doub_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chucker_filter_category_scheme_label"
        android:text="@string/chucker_http" />

    <CheckBox
        android:id="@+id/chucker_filter_category_https"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chucker_https"
        app:layout_constraintStart_toStartOf="@+id/chucker_filter_category_http"
        app:layout_constraintTop_toBottomOf="@+id/chucker_filter_category_http" />

    <View
        android:id="@+id/chucker_filter_category_scheme_divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chucker_filter_category_https" />
</androidx.constraintlayout.widget.ConstraintLayout>
